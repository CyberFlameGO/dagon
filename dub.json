{
    "name": "dagon",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov"
    ],

    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "stringImportPaths": ["shaders", "data"],

    "dependencies": {
        "dlib": "~master",
        "derelict-sdl2": "~>3.1.0-alpha.2",
        "derelict-gl3": "~>2.0.0-beta.5",
        "derelict-ft": "~>2.0.0-beta.2"
    },
	
    "buildRequirements":[
        "allowWarnings"
    ],

    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        }
    ],
	
	"copyFiles": ["gamecontrollerdb.txt"],
	
	"copyFiles-windows-x86" : ["lib/x86/*.dll"],
	"copyFiles-windows-x86_64" : ["lib/x64/*.dll"]
}
