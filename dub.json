{
    "name": "dagon",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov",
        "Rafał Ziemniewski",
        "Björn Roberg",
        "dayllenger",
        "Mateusz Muszyński"
    ],

    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "stringImportPaths": ["shaders", "data/__internal"],

    "dependencies": {
        "dlib": "~master",
        "bindbc-opengl": "~>0.8.0",
        "bindbc-sdl": "~>0.8.0"
    },

    "versions": [
        "SDL_205",
        "GL_40",
        "GL_KHR_debug"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library"
        }
    ],
    
    "copyFiles": ["data", "gamecontrollerdb.txt"],
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],
    
    "subPackages": [
		{
			"name": "ftfont",
            "importPaths": ["extensions/ftfont/src"],
            "sourcePaths": ["extensions/ftfont/src"],
            "dependencies": {
                "dagon": "*",
                "dlib": "~master",
                "bindbc-freetype": "~>0.5.0"
            },
            
            "versions": [
                "FT_28"
            ],
            
            "copyFiles-windows-x86": ["extensions/ftfont/lib/x86/*.dll"],
            "copyFiles-windows-x86_64": ["extensions/ftfont/lib/x64/*.dll"]
		},
        {
			"name": "nuklear",
            "importPaths": ["extensions/nuklear/src"],
            "sourcePaths": ["extensions/nuklear/src"],
            "dependencies": {
                "dagon": "*",
                "dagon:ftfont": "*",
                "dlib": "~master",
                "bindbc-nuklear": "~>0.2.0"
            },
            
            "versions": [
                "NK_ALL"
            ]
		}
	]
}
