{
    "name": "dagon",
    "description": "3D game engine for D",
    "homepage": "https://gecko0307.github.io/dagon",
    "license": "BSL-1.0",
    "authors": [
        "Timur Gafarov",
        "Rafał Ziemniewski",
        "Björn Roberg",
		"dayllenger",
		"Mateusz Muszyński"
    ],

    "importPaths": ["src"],
    "sourcePaths": ["src"],
    "stringImportPaths": ["shaders", "data/__internal"],

    "dependencies": {
        "dlib": "0.19.2",
        "bindbc-opengl": "0.4.0",
        "bindbc-sdl": "0.4.1"
    },

    "versions": [
        "SDL_205", 
        "GL_40", 
        "GL_KHR_debug", 
        "NK_ALL"
    ],

    "buildRequirements":[
        "allowWarnings"
    ],
    
    "configurations": [
        {
            "name": "library",
            "targetType": "library",
            "dependencies": {
                "bindbc-ft": "0.1.0",
                "bindbc-nuklear": "0.1.0"
            }
        },
        {
            "name": "Minimal",
            "targetType": "library",
            "versions": ["NoFreetype", "NoNuklear"]
        },
        {
            "name": "NoFreetype",
            "targetType": "library",
            "dependencies": {
                "bindbc-nuklear": "0.1.0"
            },
            "versions": ["NoFreetype"]
        },
        {
            "name": "NoNuklear",
            "targetType": "library",
            "dependencies": {
                "bindbc-ft": "0.1.0"
            },
            "versions": ["NoNuklear"]
        }
    ],
    
    "copyFiles-windows-x86": ["lib/x86/*.dll"],
    "copyFiles-windows-x86_64": ["lib/x64/*.dll"],
    "copyFiles": ["data", "gamecontrollerdb.txt"]
}
